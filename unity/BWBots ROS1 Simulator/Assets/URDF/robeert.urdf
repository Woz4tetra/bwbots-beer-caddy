<?xml version="1.0" encoding="utf-8"?>
<robot name="robeert">
    <material name="white">
        <color rgba="1 1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0.1 0.9"/>
    </material>

    <material name="red">
        <color rgba="0.9 0.1 0"/>
    </material>

    <link name="base_link"/>
    <link name="base_tilt_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/body.stl"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/body.stl"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0.0 0.0 0.0"/>
            <mass value="1.0"/>
            <inertia ixx="1.225" ixy="0.0099" ixz="0.0062" iyy="1.2853" iyz="-0.0034" izz="0.987"/>
        </inertial>
    </link>

    <link name="module_1">  <!-- back left -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/motor.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <link name="module_2">  <!-- back right -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/motor.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <link name="module_3">  <!-- front left -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/motor.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <link name="module_4">  <!-- front right -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/motor.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <link name="wheel_1">  <!-- back left -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.0045" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0045"/>
        </inertial>
    </link>

    <link name="wheel_2">  <!-- back right -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.0045" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0045"/>
        </inertial>
    </link>

    <link name="wheel_3">  <!-- front left -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.0045" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0045"/>
        </inertial>
    </link>

    <link name="wheel_4">  <!-- front right -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://meshes/wheel.stl"/>
            </geometry>
        </collision>
        <inertial>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <mass value="0.05"/>
            <inertia ixx="0.0045" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.0045"/>
        </inertial>
    </link>



    <joint name="base_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_tilt_link"/>
    </joint>

    <joint name="base_link_to_module_1_joint" type="revolute">
        <parent link="base_tilt_link"/>
        <child link="module_1"/>  <!-- back left -->
        <origin xyz="-0.08  0.0575  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="base_link_to_module_2_joint" type="revolute">
        <parent link="base_tilt_link"/>
        <child link="module_2"/>  <!-- back right -->
        <origin xyz="-0.08  -0.0575  0.0"/>
        <origin rpy="1.5708  0.0  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <joint name="base_link_to_module_3_joint" type="revolute">
        <parent link="base_tilt_link"/>
        <child link="module_3"/>  <!-- front left -->
        <origin xyz="0.08  0.0575  0.0"/>
        <origin rpy="1.5708  0.0  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="base_link_to_module_4_joint" type="revolute">
        <parent link="base_tilt_link"/>
        <child link="module_4"/>  <!-- front right -->
        <origin xyz="0.08  -0.0575  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>


    <joint name="module_to_wheel_1_joint" type="continuous">
        <parent link="module_1"/>
        <child link="wheel_1"/>  <!-- back left -->
        <origin xyz="0.0  0.037  0.0575" rpy="1.5708 1.5708 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="module_to_wheel_2_joint" type="continuous">
        <parent link="module_2"/>
        <child link="wheel_2"/>  <!-- back right -->
        <origin xyz="0.0  0.037  0.0575" rpy="1.5708 1.5708 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <joint name="module_to_wheel_3_joint" type="continuous">
        <parent link="module_3"/>
        <child link="wheel_3"/>  <!-- front left -->
        <origin xyz="0.0  0.037  0.0575" rpy="1.5708 1.5708 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="module_to_wheel_4_joint" type="continuous">
        <parent link="module_4"/>
        <child link="wheel_4"/>  <!-- front right -->
        <origin xyz="0.0  0.037  0.0575" rpy="1.5708 1.5708 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>
</robot>
