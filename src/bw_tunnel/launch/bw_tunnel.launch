<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="robot_address" default="/dev/ttyACM0"/>
    <arg name="publish_odom_tf" default="true"/>
    <arg name="joint_names" default="$(find bw_bringup)/config/robeert/joints.yaml"/>

    <group ns="bw">
        <node name="bw_tunnel" pkg="bw_tunnel" type="bw_tunnel_node" output="screen" respawn="true">
            <rosparam param="joint_names" file="$(arg joint_names)" command="load"/>
            <param name="device_path" value="$(arg robot_address)"/>
            <param name="device_baud" value="1000000"/>
            <param name="cmd_vel_timeout" value="1.0"/>
            <param name="write_rate" value="120.0"/>
            <param name="publish_odom_tf" value="$(arg publish_odom_tf)"/>
            <param name="open_attempts" value="1000"/>
        </node>
    </group>
</launch>
