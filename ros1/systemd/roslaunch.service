[Unit]
Wants=roscore.service
After=NetworkManager.service time-sync.target
Description=BWBots roslaunch

[Service]
Type=forking
User=nvidia
Group=nvidia
RemainAfterExit=yes
ExecStart=/usr/local/bin/run_roslaunch
ExecStop=/usr/local/bin/stop_roslaunch
KillMode=none
TimeoutStopSec=3
KillSignal=SIGINT

Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

