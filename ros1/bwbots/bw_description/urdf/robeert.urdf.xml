<robot name="robeert">
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0.1 0.9 1"/>
    </material>

    <material name="red">
        <color rgba="0.9 0.1 0 1"/>
    </material>

    <!-- base_link -> base_tilt_link is defined in bw_imu_joint node -->

    <link name="base_tilt_link">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://bw_description/meshes/body.stl"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>

    <link name="module_1">  <!-- back left -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://bw_description/meshes/module.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <link name="module_2">  <!-- back right -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 3.1415"/>
            <geometry>
                <mesh filename="package://bw_description/meshes/module.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <link name="module_3">  <!-- front left -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="package://bw_description/meshes/module.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <link name="module_4">  <!-- front right -->
        <visual>
            <origin xyz="0 0 0" rpy="0 0 3.1415"/>
            <geometry>
                <mesh filename="package://bw_description/meshes/module.stl"/>
            </geometry>
            <material name="red"/>
        </visual>
    </link>

    <joint name="base_link_to_module_1_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="module_1"/>  <!-- back left -->
        <origin xyz="-0.08  0.0575  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="base_link_to_module_2_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="module_2"/>  <!-- back right -->
        <origin xyz="-0.08  -0.0575  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>
    
    <joint name="base_link_to_module_3_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="module_3"/>  <!-- front left -->
        <origin xyz="0.08  0.0575  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <joint name="base_link_to_module_4_joint" type="continuous">
        <parent link="base_tilt_link"/>
        <child link="module_4"/>  <!-- front right -->
        <origin xyz="0.08  -0.0575  0.0"/>
        <axis xyz="0 0 1"/>
    </joint>
</robot>
